{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>k35o/renovate-config",
    "monorepo:storybook",
    "monorepo:react",
    "monorepo:vitest"
  ],
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "!/^(pnpm|node)$/",
        "!/^@storybook/",
        "!/storybook$/",
        "!/react$/",
        "!/react-dom$/",
        "!/vitest$/",
        "!/@vitest/"
      ],
      "groupName": "minor and patch dependencies"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    }
  ]
}
