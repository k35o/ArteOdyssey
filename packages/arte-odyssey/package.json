{
  "name": "@k8o/arte-odyssey",
  "version": "2.0.2",
  "description": "k8o's react ui library",
  "author": "k8o <kosakanoki@gmail.com>",
  "keywords": [
    "react",
    "ui",
    "design-system",
    "k8o",
    "components",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k35o/ArteOdyssey.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "bugs": {
    "url": "https://github.com/k35o/ArteOdyssey/issues"
  },
  "type": "module",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./hooks/*": {
      "import": {
        "types": "./dist/hooks/*/index.d.ts",
        "default": "./dist/hooks/*/index.js"
      }
    },
    "./styles.css": "./dist/styles/index.css",
    "./*": {
      "import": {
        "types": "./dist/components/*/index.d.ts",
        "default": "./dist/components/*/index.js"
      }
    }
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "pnpm run build:clean && pnpm build:js && pnpm build:css",
    "build:js": "node scripts/esbuild.js && pnpm build:js:types",
    "build:js:types": "tsc --project tsconfig.build.json",
    "build:css": "mkdir -p dist/styles && cp src/styles/index.css dist/styles/index.css",
    "build:clean": "rm -rf dist",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui --coverage",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "check": "biome check",
    "check:write": "biome check --write --unsafe"
  },
  "dependencies": {
    "@floating-ui/react": "0.27.16",
    "baseline-status": "1.1.1",
    "clsx": "2.1.1",
    "esbuild": "0.27.2",
    "lucide-react": "0.562.0",
    "motion": "12.26.2",
    "react-error-boundary": "6.1.0",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "5.0.0",
    "@storybook/addon-a11y": "10.1.11",
    "@storybook/addon-docs": "10.1.11",
    "@storybook/addon-vitest": "10.1.11",
    "@storybook/react-vite": "10.1.11",
    "@tailwindcss/postcss": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react-swc": "catalog:",
    "@vitest/browser-playwright": "4.0.17",
    "@vitest/ui": "4.0.17",
    "postcss": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "storybook": "10.1.11",
    "storybook-addon-mock-date": "2.0.0",
    "tailwindcss": "catalog:",
    "vite": "catalog:",
    "vitest": "4.0.17",
    "vitest-browser-react": "2.0.2"
  },
  "peerDependencies": {
    "@types/react": ">=19.0.0",
    "@types/react-dom": ">=19.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0",
    "tailwindcss": ">=4.0.0",
    "typescript": ">=5.9.0"
  }
}
